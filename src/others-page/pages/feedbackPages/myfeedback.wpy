<template>
  <view>
    <qy-tip :content.sync="errMsg" :on.sync="errRequest"/>
    <view>
      <view class="feedback-container" animation="{{animationTop}}">
        <view class="main-title">选择反馈类型</view>
        <repeat for="{{titles}}" index="index" item="item">
          <view class="detail-title" data-index="{{index}}" @tap="chooseType">
            {{item.title}}
            <view
              class="arrow-image"
              style="background-image:url({{item.show ? 'https://static.airbob.org/under-graduate/feedback/btu_highlight.png' : 'https://static.airbob.org/under-graduate/feedback/btu_disable.png'}})"
            ></view>
          </view>
        </repeat>
      </view>
      <view class="my-feedback">
        <view style="margin-bottom:300rpx;">
          <repeat for="{{myFeed}}" index="index" key="key" item="item">
            <view
              class="my-content"
              animation="{{animationPush}}"
              style="min-height:{{item.feedtype === 'image' ? '600rpx' : '100rpx'}};"
            >
              <view class="my-content-container">
                <view class="my-content-detail">
                  <view class="loading-area">
                    <view wx:if="{{!LoadingHide[index]}}">
                      <i class="weui-loading"></i>
                    </view>
                    <view wx:if="{{sendErr[index]}}">
                      <image
                        style="width:40rpx;height:40rpx;"
                        src="https://static.airbob.org/under-graduate/more/icon_fail.png"
                        mode="aspectFit"
                      />
                    </view>
                  </view>
                  <view wx:if="{{item.feedtype === 'content'}}">{{item.content}}</view>
                  <view wx:if="{{item.feedtype === 'image'}}">
                    <image
                      wx:if="{{item.feedtype === 'image'}}"
                      class="feed-image"
                      src="{{item.content}}"
                      mode="aspectFit"
                    />
                  </view>
                  <view class="my-content-arrow"></view>
                </view>
              </view>
              <view class="my-portrait">
                <open-data type="userAvatarUrl"></open-data>
              </view>
            </view>
          </repeat>
        </view>
        <view class="type-in">
          <view class="type-in-image" @tap="chooseImage"></view>
          <textarea value="{{content}}" class="type-in-word" auto-height cursor-spacing="8" placeholder="{{placeholder}}" placeholder-style="color:#888888;font-size:28rpx;" @input="inputWord" @confirm="searchSubmit"/>
        </view>
      </view>
    </view>
  </view>
</template>

<script>
import wepy from "wepy";
import tip from "@/components/qy-tip";
import { feedbackReactionContent, feedbackChooseType } from "@/api/feedback";
import { REQUEST_URL } from "@/api/url";
export default class extends wepy.page {
  config = {
    navigationBarTitleText: "帮助与反馈"
  };
  data = {
    errRequest: false,
    errMsg: "",
    feedbackId: "",
    titles: [
      { title: "账号问题", show: false },
      { title: "功能反馈", show: false },
      { title: "建议反馈", show: false },
      { title: "使用帮助", show: false },
      { title: "其他", show: false }
    ],
    animationTop: {},
    winWidth: 0,
    winHeight: 0,
    pullUp: false,
    myFeed: [],
    content: "",
    animationPush: {},
    tag: "",
    LoadingHide: [],
    sendErr: [],
    portrait: "",
    placeholder: ""
  };
  components = {
    "qy-tip": tip
  };
  methods = {
    chooseType(e) {
      let index = e.currentTarget.dataset.index;
      this.titles[index].show = true;
      this.tag = this.titles[index].title;
      let that = this;
      feedbackChooseType(that.tag).then(res => {
        let response = res.data;
        if (response.success) {
          that.feedbackId = response.data.id;
          let animation = wepy.createAnimation({
            duration: "500",
            delay: "300"
          });
          animation.translate(0, -that.winHeight).step();
          that.animationTop = animation.export();
          setTimeout(() => {
            that.pullUp = true;
            that.placeholder = "编辑好按Enter键直接发送哦";
            that.navTitle = "我要反馈";
            that.$apply();
          }, 800);
          that.$apply();
        } else {
          that.errRequest = true;
          that.errMsg = response.errMsg;
          that.titles.forEach(element => {
            element.show = false;
          });
          that.$apply();
        }
      });
    },
    inputWord(e) {
      this.content = e.detail.value;
    },
    async chooseImage() {
      let that = this;
      await wepy
        .chooseImage({
          count: 1
        })
        .then(e => {
          let tempFilePaths = e.tempFilePaths[0];
          that.LoadingHide[this.LoadingHide.length] = false;
          this.sendErr[this.sendErr.length] = false;
          that.myFeed.push({
            content: tempFilePaths,
            feedtype: "image",
            status: "user"
          });
          wepy
            .uploadFile({
              url: `${REQUEST_URL}/feedback/${this.feedbackId}/detail/pic`,
              filePath: tempFilePaths,
              name: "file",
              data: {
                file: tempFilePaths
              },
              header: {
                cookie: "session_id=" + wepy.getStorageSync("token")
              }
            })
            .then(res => {
              let response = JSON.parse(res.data);
              if (!response.success) {
                that.errRequest = true;
                that.errMsg = response.errMsg;
                that.LoadingHide[that.LoadingHide.length - 1] = true;
                that.sendErr[this.sendErr.length - 1] = true;
                that.$apply();
              } else {
                that.LoadingHide[that.LoadingHide.length - 1] = true;
                that.$apply();
              }
            });
          that.$apply();
          setTimeout(() => {
            let animation = wepy.createAnimation({
              duration: 200
            });
            animation.translate(-this.winWidth, 0).step();
            that.animationPush = animation.export();
            that.$apply();
            that.animationPush = {};
          }, 0);
          wepy.pageScrollTo({
            scrollTop: 9999999
          });
        });
    },
    async searchSubmit() {
      if (this.content !== "") {
        this.LoadingHide[this.LoadingHide.length] = false;
        this.sendErr[this.sendErr.length] = false;
        this.myFeed.push({
          content: this.content,
          feedtype: "content",
          status: "user"
        });
      }
      let that = this;
      await feedbackReactionContent(this.feedbackId, that.content).then(res => {
        let response = res.data;
        if (!response.success) {
          that.errRequest = true;
          that.errMsg = response.errMsg;
          that.LoadingHide[that.LoadingHide.length - 1] = true;
          that.sendErr[this.sendErr.length - 1] = true;
          that.$apply();
        } else {
          that.LoadingHide[that.LoadingHide.length - 1] = true;
        }
      });
      this.content = "";
      wepy.pageScrollTo({
        scrollTop: 9999999
      });
      setTimeout(() => {
        let animation = wepy.createAnimation({
          duration: 200
        });
        animation.translate(-this.winWidth, 0).step();
        this.animationPush = animation.export();
        this.$apply();
        this.animationPush = {};
      }, 0);
    }
  };
  async onLoad() {
    await wepy.getSystemInfo().then(res => {
      this.portrait = wepy.getStorageSync("User").nativeInformation.avatar;
      this.winWidth = parseInt(res.windowWidth);
      this.winHeight = parseInt(res.windowHeight);
    });
  }
}
</script>

